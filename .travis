language: julia
os:
  - linux
  - osx
julia:
  - 1.5
  - nightly

notifications:
  email: false
script:
  - if [[ -a .git/shallow ]]; then git fetch --unshallow; fi
  - julia -e 'using Pkg; pkg"build SpinGlassPEPS"; pkg"add Test"'
  - julia --code-coverage test/runtests.jl 

after_success:
  - julia -e 'import SpinGlassPEPS; using Pkg; pkg"add Coverage"; using Coverage; Coveralls.submit(process_folder())'
